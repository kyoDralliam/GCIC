{
  "scripts": {
    "make": "esy b dune build",
    "watch": "esy b dune build -w",
    "test": "esy b dune runtest",
    "coverage": "esy b dune runtest --instrument-with=bisect_ppx --force",
    "report": "esy b bisect-ppx-report html",
    "run": "esy b dune exec gcic",
    "format": "dune build @fmt --auto-promote"
  },
  "dependencies": {
    "ocaml": "4.13.x",
    "@opam/dune": "*",
    "@opam/stdio": "*",
    "@opam/menhir": "*",
    "@opam/sedlex": "*"
  },
  "devDependencies": {
    "@opam/easy-format": "1.3.2",
    "@opam/merlin": "*",
    "@opam/ocamlformat": "^0.21",
    "@opam/ocaml-lsp-server": "^1.10.5",
    "@opam/bisect_ppx": "^2.8.1",
    "@opam/ppx_jane": "*",
    "@opam/alcotest": "*",
    "@opam/patdiff": "*",
    "@opam/qcheck": "*",
    "@opam/qcheck-alcotest": "*",
    "@opam/utop": "*"
  }
}
